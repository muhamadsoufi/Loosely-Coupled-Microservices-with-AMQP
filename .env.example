# ============================================
# Todo App - Environment Configuration
# ============================================
# Copy this file to .env and modify values as needed
# Use this for docker-compose or Docker deployments

# ============================================
# MongoDB Configuration
# ============================================

# MongoDB Connection String
# Local: mongodb://localhost:27017
# Remote: mongodb+srv://user:pass@cluster.mongodb.net/?retryWrites=true&w=majority
# Docker Network: mongodb://mongodb:27017
TODO_APP_MongoSettings__ConnectionString=mongodb://mongodb:27017

# Database Name
TODO_APP_MongoSettings__DbName=dotnet-mongo-demo

# Collection Name (Table equivalent in MongoDB)
TODO_APP_MongoSettings__TodoCollection=Todo

# ============================================
# ASP.NET Core Configuration
# ============================================

# Environment: Development, Staging, Production
ASPNETCORE_ENVIRONMENT=Production

# Enable HTTPS redirection
ASPNETCORE_ForceHttps=true

# Application URLs (for development)
ASPNETCORE_URLS=https://+:443;http://+:80

# ============================================
# Logging Configuration
# ============================================

# Log Level: Trace, Debug, Information, Warning, Error, Critical, None
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft=Warning
Logging__LogLevel__Microsoft.Hosting.Lifetime=Information

# ============================================
# Docker/Kubernetes Specific
# ============================================

# Number of application replicas
REPLICAS=1

# Docker image tag
IMAGE_TAG=latest

# Container restart policy: no, always, unless-stopped, on-failure
RESTART_POLICY=unless-stopped
